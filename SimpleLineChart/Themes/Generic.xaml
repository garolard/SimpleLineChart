<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:SimpleLineChart.Controls"
                    xmlns:local="using:SimpleLineChart.Themes">

    <Style TargetType="controls:BezierCurveChartControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:BezierCurveChartControl">
                    <Viewbox x:Name="PartViewbox">
                        <Canvas x:Name="PartCanvas"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch" />
                    </Viewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
